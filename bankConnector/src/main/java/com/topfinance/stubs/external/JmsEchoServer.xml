<!-- START SNIPPET: e1 -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:broker="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
        http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">
<!-- END SNIPPET: e1 -->

    <!-- START SNIPPET: e2 -->
    <!-- let Spring do its IoC stuff in this package -->
    <context:component-scan base-package="com.topfinance.stubs.external"/>
    <!-- END SNIPPET: e2 -->



    <!-- START SNIPPET: e4 -->
    <broker:broker useJmx="false" persistent="false" brokerName="localhost">
        <broker:transportConnectors>
            <broker:transportConnector name="tcp" uri="tcp://localhost:61111"/>
        </broker:transportConnectors>
    </broker:broker>
    <!-- END SNIPPET: e4 -->

    <!-- START SNIPPET: e5 -->
    <!-- lets configure the Camel ActiveMQ to use the ActiveMQ broker declared above -->
    <bean id="jms" class="org.apache.activemq.camel.component.ActiveMQComponent">
        <property name="brokerURL" value="tcp://localhost:61111"/>
    </bean>
    <!-- END SNIPPET: e5 -->

</beans>
